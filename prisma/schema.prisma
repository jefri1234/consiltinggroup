generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//relacion de UNO A MUCHOS

model User{
  id Int @id @default(autoincrement())
  tipoUser String?  @default("estudiante")
  usuario String
  nombre String
  apellido String
  contrasena String
  telefono String
  courses Curso[] @relation("UserCourses")
}

model Curso {
  id          Int          @id @default(autoincrement())
  nombre      String       @unique
  description String
  Instructor  String
  duracion    String
  imagen      String?
  users       User[]       @relation("UserCourses")
  materiales  Material[]   @relation("CursoMateriales")
}

model Material {
  id        Int    @id @default(autoincrement())
  nombre    String
  tipo      String
  url       String
  cursoId   Int
  curso     Curso  @relation("CursoMateriales", fields: [cursoId], references: [id])
}