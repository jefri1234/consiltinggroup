generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//relacion de UNO A MUCHOS 
model User{
  id Int @id @default(autoincrement())
  usuario String
  nombre String
  apellido String
  contrasena String
  telefono String
  courses Curso[] @relation("UserCourses")
}

model Curso{
  id Int @id @default(autoincrement())
  nombre String @unique
  description String
  Instructor String
  duracion String
  users      User[]  @relation("UserCourses")
}


